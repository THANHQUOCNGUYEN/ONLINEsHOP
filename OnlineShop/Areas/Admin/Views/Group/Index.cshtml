@using Model.EF
@model IEnumerable<UserGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Danh sách nhóm người dùng
}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách nhóm người dùng
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

                                    <th>STT</th>
                                    <th>Mã Loại</th>
                                    <th>Tên Loại TV</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/Group/PhanQuyen/@item.ID">Phân Quyền</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!--Phân Trang-->

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </div>
</div>
