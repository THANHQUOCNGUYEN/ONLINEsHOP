@using Model.EF;
@model IEnumerable<Role>
@{
    ViewBag.Title = "PhanQuyen";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section jsFooter{
    <script src="/assets/admin/js/controller/userGroupController.js"></script>
}
@section header{
    Danh sách các quyền
}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách các quyền đã gán
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive" id="#phanquyen">
                        <input id="txtID" data-id="@ViewBag.id" type="hidden" />
                        @foreach (var item in Model) //danh sach cac row cua roles
                        {
                            <div class="col-lg-3 col-sm-6 col-md-4">
                                <input id="@item.ID" data-id="@item.ID" class="txtRoles" style="width:40pt" type="checkbox" />&nbsp;<strong>@item.Name</strong>
                            </div>
                        }
                        <hr />

                        <button class="btn btn-primary btn-sm pull-right" id="btnLuu">Lưu</button>
                        <!--Phân Trang-->

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </div>
</div>


